<Window x:Class="ProjectServ.ProjectListPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Список проєктів" Height="450" Width="600"
        Background="#F0F8FF" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="List of Projects" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" Grid.Row="0"/>

        <ListBox x:Name="ProjectsListBox" Grid.Row="1" Margin="0,0,0,10" SelectionChanged="ProjectsListBox_SelectionChanged" Background="#FF9B9A9A">
 
        </ListBox>

        <Button x:Name="BackButton" Content="Back" Background="#FF2F5BA3" Foreground="White" Height="35" Width="100" HorizontalAlignment="Center" Grid.Row="2" Click="BackButton_Click" FontFamily="Candara" FontSize="14"/>
    </Grid>
</Window>