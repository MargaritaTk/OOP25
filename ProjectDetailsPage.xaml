<Window x:Class="ProjectServ.ProjectDetailsPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Деталі проєкту" Height="600" Width="900"
        Background="#F0F8FF" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="31*"/>
            <ColumnDefinition Width="399*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="337*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="ProjectNameTextBlock" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" Grid.Row="0" Grid.ColumnSpan="2"/>
        <TextBlock x:Name="ProjectDescriptionTextBlock" FontSize="14" Margin="0,0,0,10" Grid.Row="1" TextWrapping="Wrap" Grid.ColumnSpan="2"/>

        <Grid Grid.Row="2" Margin="10,10,0,0" Grid.ColumnSpan="2" Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="110*"/>
                <RowDefinition Height="317*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- To Do -->
            <Border Grid.Column="0" BorderBrush="#1E3A8A" BorderThickness="1" Margin="-17,0,5,0" Grid.RowSpan="2">
                <StackPanel Margin="-1,-1,-1,0">
                    <TextBlock Text="TO DO" FontSize="16" FontWeight="Bold" Background="#FFF63B3B" Foreground="White" Padding="5" TextAlignment="Center" Height="32" Width="294"/>
                    <ListBox x:Name="ToDoListBox" AllowDrop="True" DragOver="ListBox_DragOver" Drop="ListBox_Drop" PreviewMouseLeftButtonDown="ListBox_PreviewMouseLeftButtonDown" MinHeight="200" Height="196" Width="290"/>
                </StackPanel>
            </Border>

            <!-- In Progress -->
            <Border BorderBrush="#1E3A8A" BorderThickness="1" Margin="283,0,10,0" Grid.ColumnSpan="2" Grid.RowSpan="2">
                <StackPanel>
                    <TextBlock Text="IN PROGRESS" FontSize="16" FontWeight="Bold" Background="#FF31AB36" Foreground="White" Padding="5" TextAlignment="Center"/>
                    <ListBox x:Name="InProgressListBox" AllowDrop="True" DragOver="ListBox_DragOver" Drop="ListBox_Drop" PreviewMouseLeftButtonDown="ListBox_PreviewMouseLeftButtonDown" MinHeight="200"/>
                </StackPanel>
            </Border>

            <!-- Done -->
            <Border Grid.Column="2" BorderBrush="#1E3A8A" BorderThickness="1" Grid.RowSpan="2">
                <StackPanel>
                    <TextBlock Text="DONE" FontSize="16" FontWeight="Bold" Background="#FF520CCD" Foreground="White" Padding="5" TextAlignment="Center"/>
                    <ListBox x:Name="DoneListBox" AllowDrop="True" DragOver="ListBox_DragOver" Drop="ListBox_Drop" PreviewMouseLeftButtonDown="ListBox_PreviewMouseLeftButtonDown" MinHeight="200"/>
                </StackPanel>
            </Border>
        </Grid>

        <StackPanel Orientation="Horizontal" Grid.Row="4" HorizontalAlignment="Left" Margin="313,10,0,0" Grid.Column="1">
            <Button x:Name="BackButton" Content="Back" Background="#FF2A4A8F" Foreground="White" Height="35" Width="100" Click="BackButton_Click" Margin="0,0,10,0"/>
        </StackPanel>
        <Button x:Name="AddTaskButton" Content="Add task" Background="#3B82F6" Foreground="White" Click="AddTaskButton_Click" Margin="108,-17,591,21" Grid.Column="1"/>
        <Button x:Name="EditProjectButton" Content="Edit Project" Background="#FF45B6F1" Foreground="White" Click="EditProjectButton_Click" Margin="212,-17,490,21" Grid.Column="1"/>
        <Button x:Name="DeleteProjectButton" Content="Delete Project" Background="#FF1B526A" Foreground="White" Click="DeleteProjectButton_Click" Margin="313,-17,383,21" Grid.Column="1"/>
        <Button x:Name="ExportProjectButton" Content="Export JSON" Background="#FFC388EE" Foreground="White" Click="ExportProjectButton_Click" Margin="462,-17,239,22" Grid.Column="1"/>
    </Grid>
</Window>