<Window x:Class="ProjectServ.MainPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Головна сторінка" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Background="#E0F2F7">
            <Button x:Name="CreateProjectButton" Content="Create project" Margin="10" Padding="10" Background="#FFE7CDB4" Width="176" Click="CreateProjectButton_Click"/>
            <Button x:Name="ProjectListButton" Content="List of projects" Margin="10" Padding="10" Background="#FFE7CDB4" Width="207" Click="ProjectListButton_Click" FontFamily="Candara"/>
            <Button x:Name="LogoutButton" Content="Log Out" Margin="10" Padding="10" Background="#FF3275BF" Foreground="White" Width="100" Click="LogoutButton_Click" FontFamily="Candara"/>
        </StackPanel>

        <Grid Grid.Row="1" Background="#B3E5FC">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" MinHeight="43.94"/>
                <RowDefinition Height="Auto" MinHeight="25.055"/>
                <RowDefinition Height="Auto" MinHeight="45"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Text="Your works" FontSize="18" FontWeight="Bold" Margin="10,10,10,10" Grid.Row="0"/>

            <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,36" Grid.RowSpan="2">
                <TextBlock Text="Latest projects:" Width="108" Height="37" FontWeight="Bold"/>
            </StackPanel>

            <TextBlock Margin="10,10,10,227" Grid.Row="3"><Run Text="In work! Assigned to me"/><Run /><Run Text=" "/><Run Text="0"/><Run Text=" Started"/></TextBlock>

            <ListBox x:Name="RecentProjectsListBox" Grid.Row="3" Margin="10,31,454,1">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Text}" FontSize="14" Margin="5"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <Label Content="Додаток для стартапів...                    
- Мої завдання                    
- Закриті завдання
- Дошки
" HorizontalAlignment="Left" Grid.Row="2" VerticalAlignment="Center" Height="55" Width="139" Margin="10,0,0,0" Background="White" FontSize="8"/>
        </Grid>
    </Grid>
</Window>