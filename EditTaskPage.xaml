<Window x:Class="ProjectServ.EditTaskPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Task" Height="400" Width="400"
        Background="#F0F8FF" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Task Title:" FontSize="14" Margin="0,0,0,5" Grid.Row="0" FontFamily="Candara"/>
        <TextBox x:Name="TaskTitleTextBox" Height="25" Margin="0,0,0,10" Grid.Row="1"/>

        <TextBlock Text="Description:" FontSize="14" Margin="0,0,0,5" Grid.Row="2" FontFamily="Candara"/>
        <TextBox x:Name="TaskDescriptionTextBox" Height="50" Margin="0,0,0,10" AcceptsReturn="True" Grid.Row="3"/>

        <TextBlock Text="Deadline:" FontSize="14" Margin="0,0,0,5" Grid.Row="4" FontFamily="Candara"/>
        <DatePicker x:Name="DeadlineDatePicker" Height="25" Margin="0,0,0,10" Grid.Row="5"/>

        <TextBlock Text="Status:" FontSize="14" Margin="0,0,0,5" Grid.Row="6" FontFamily="Candara"/>
        <ComboBox x:Name="StatusComboBox" Height="25" Margin="0,21,0,0" Grid.Row="6">
            <ComboBoxItem Content="Open"/>
            <ComboBoxItem Content="InProgress"/>
            <ComboBoxItem Content="Closed"/>
        </ComboBox>

        <TextBlock Text="Assigned Developer:" FontSize="14" Margin="0,49,16,-22" Grid.Row="6" FontFamily="Candara"/>
        <ComboBox x:Name="AssignedDeveloperComboBox" Margin="0,68,0,-46" Grid.Row="6"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="10"/>
        <Button x:Name="CancelButton" Content="Cancel" Margin="38,102,222,-88" Click="CancelButton_Click" Grid.Row="6" Background="#FF4D84C1" FontFamily="Candara" FontSize="14"/>
        <Button x:Name="SaveButton" Content="Save" Click="SaveButton_Click" Margin="230,102,30,-87" Grid.Row="6" FontFamily="Candara" Background="#FF1A5596" FontSize="14"/>
    </Grid>
</Window>