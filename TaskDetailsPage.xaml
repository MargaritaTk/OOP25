<Window x:Class="ProjectServ.TaskDetailsPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Деталі завдання" Height="500" Width="600"
        Background="#F0F8FF" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="TaskTitleTextBlock" FontSize="18" FontWeight="Bold" Margin="0,0,0,5" Grid.Row="0"/>
        <TextBlock x:Name="TaskDescriptionTextBlock" FontSize="14" Margin="0,0,0,5" Grid.Row="1" TextWrapping="Wrap"/>
        <TextBlock x:Name="TaskDeadlineTextBlock" FontSize="14" Margin="0,0,0,5" Grid.Row="2"/>
        <TextBlock x:Name="TaskStatusTextBlock" FontSize="14" Margin="0,0,0,10" Grid.Row="3"/>

        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,9,0,10" Grid.RowSpan="3"/>

        <ListBox x:Name="CommentsListBox" Grid.Row="4" Margin="0,10,0,0">
        </ListBox>

        <Button x:Name="BackButton" Content="Back" Background="#FF264F91" Foreground="White" Height="35" Width="100" HorizontalAlignment="Center" Grid.Row="5" Click="BackButton_Click" FontSize="14" FontFamily="Candara"/>
        <Button x:Name="AddCommentButton" Content="Add a comment" Background="#3B82F6" Foreground="White" Margin="10,3,430,15" Click="AddCommentButton_Click" Grid.RowSpan="2" FontFamily="Candara" FontSize="14"/>
        <Button x:Name="ChangeStatusButton" Content="Change status" Background="#FF7C99BF" Foreground="Black" Margin="160,3,280,15" Click="ChangeStatusButton_Click" Grid.RowSpan="2" FontSize="14" FontFamily="Candara"/>
    </Grid>
</Window>