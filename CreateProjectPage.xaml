<Window x:Class="ProjectServ.CreateProjectPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Створити проєкт" Height="300" Width="400"
        Background="#F0F8FF" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Project name:" FontSize="14" Margin="0,0,0,5" Grid.Row="0" FontFamily="Candara"/>
        <TextBox x:Name="ProjectNameTextBox" Height="25" Margin="0,0,0,10" BorderBrush="#1E3A8A" BorderThickness="1" Grid.Row="1"/>

        <TextBlock Text="Project Description:" FontSize="14" Margin="0,0,0,5" Grid.Row="2" FontFamily="Candara"/>
        <TextBox x:Name="ProjectDescriptionTextBox" Height="50" Margin="0,0,0,20" BorderBrush="#1E3A8A" BorderThickness="1" AcceptsReturn="True" Grid.Row="3"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="3" Margin="0,82,0,-82">
            <Button x:Name="BackButton" Content="Back" Background="#FF163C6C" Foreground="White" Height="34" Width="100" Click="BackButton_Click" FontFamily="Candara" FontSize="14"/>
            <Button x:Name="CreateButton" Content="Create" Background="#3B82F6" Foreground="White" Height="34" Width="100" Click="CreateButton_Click" FontSize="14" FontFamily="Candara"/>
        </StackPanel>
    </Grid>
</Window>