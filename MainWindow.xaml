<Window x:Class="ProjectServ.MainWindow"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="СЕРВІС ДЛЯ УПРАВЛІННЯ ПРОЄКТАМИ" Height="600" Width="907"
        Background="#E6F0FA">
    <Grid Background="#FF84BBEB">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="49*"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>

        <!-- Ліва частина -->
        <StackPanel Grid.Column="1" Margin="10,35,22,5">
            <TextBlock 
                       FontWeight="Bold" FontSize="22" Foreground="#1E3A8A" 
                       TextWrapping="Wrap" MaxWidth="350" Height="74" Width="377" FontFamily="Georgia" HorizontalAlignment="Center"><Run Text="PROJECT  MANAGEMENT"/><LineBreak/><Run Text="                  SERVICE"/></TextBlock>
        </StackPanel>

        <!-- Права частина (форма для реєстрації) -->
        <StackPanel Grid.Column="2" Background="#F0F8FF" Margin="20,20,20,20">
            <TextBlock Text="Username:" FontSize="16" Margin="0,0,0,5" FontFamily="Candara"/>
            <TextBox x:Name="LoginTextBox" Height="30" Margin="0,0,0,10" 
                     BorderBrush="#1E3A8A" BorderThickness="1"/>
            <TextBlock Text="Password:" FontSize="16" Margin="0,0,0,5" FontFamily="Candara"/>
            <PasswordBox x:Name="PasswordBox" Height="30" Margin="0,0,0,20" 
                         BorderBrush="#1E3A8A" BorderThickness="1"/>
            <TextBlock Text="Choose role:" FontSize="16" Margin="0,0,0,5" FontFamily="Candara"/>
            <CheckBox x:Name="ProjectManagerCheckBox" Content="Project Manager" 
                      FontSize="14" Margin="0,0,0,10" Foreground="#1E3A8A" FontFamily="Candara"/>
            <CheckBox x:Name="DeveloperCheckBox" Content="Developer" 
                      FontSize="14" Margin="0,0,0,20" Foreground="#1E3A8A" FontFamily="Candara"/>
            <Button x:Name="RegisterButton" Content="REGISTER" 
                    Background="#3B82F6" Foreground="White" Height="40" Margin="0,0,0,10" 
                    Click="RegisterButton_Click" FontFamily="Candara" FontSize="20"/>
            <TextBlock HorizontalAlignment="Center" FontFamily="Candara" FontSize="14">
                <Run Text="Already have an account? "/>
                <Hyperlink x:Name="LoginLink" Click="LoginLink_Click">Sign In</Hyperlink>
            </TextBlock>
        </StackPanel>

        <!-- Нижня частина -->
        <TextBlock Text="Copyright © 2025" HorizontalAlignment="Left" 
                   VerticalAlignment="Bottom" Margin="144,0,0,10" Foreground="#1E3A8A" Grid.Column="1"/>
    </Grid>
</Window>